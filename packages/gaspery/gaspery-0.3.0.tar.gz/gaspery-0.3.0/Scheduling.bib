	year = {2018},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, planetary systems, techniques: radial velocities},
	pages = {255},
	annote = {ADS Bibcode: 2018AJ....156..255B},
}

@article{figueira_radial_2016,
